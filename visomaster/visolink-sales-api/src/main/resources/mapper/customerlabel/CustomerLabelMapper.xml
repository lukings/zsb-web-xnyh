<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.visolink.system.customerlabel.mapper.CustomerLabelMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.visolink.system.customerlabel.entity.CustomerLabel">
        <id column="Id" property="id" />
        <result column="Creator" property="creator" />
        <result column="CustomerLabel" property="customerLabel" />
        <result column="CreateTime" property="createTime" />
        <result column="Editor" property="editor" />
        <result column="EditTime" property="editTime" />
        <result column="IsDel" property="isDel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        Id, Creator, CustomerLabel, CreateTime, Editor, EditTime, IsDel
    </sql>

    <!-- 根据创建人查询标签列表 -->
    <select id="selectByCreator" resultMap="BaseResultMap">
        SELECT 
        <include refid="Base_Column_List" />
        FROM b_customer_label
        WHERE Creator = #{creator}
        AND IsDel = 0
        ORDER BY CreateTime DESC
    </select>

</mapper>
